@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            <!--atTheRate symbol means you may write C# within HTML-->
            <!--This is a PRG(Post, Redirect and Get)-->
            @foreach (var customer in Model.Customers)
            {
                <tr>
                    <th>@customer.Id</th>
                    <th>@customer.Name</th>
                    <th>Link to edit, delete button</th>
                </tr>
             }
        </tbody>
    </table>
</form>